extends layouts/main

block content 
    .form-container 
        form(action=`/videos${routes.upload}` method="post" enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file" id="file" name="fileURL"  accept="video/*" required=true) 
            input(type="text" placeholder="Title" name="title" required=true)
            textarea(name="description", cols="10", rows="10" placeholder="Description" required=true) 
            input(type="submit" value="Upload")